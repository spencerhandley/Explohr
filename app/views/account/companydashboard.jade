extends ../layout

block content
	include ../_topbar
	.container
		#profile
			.row#videoContainer
				div.courseDetails.col-sm-6.col-md-6
					h2.profName Company Dashboard
					p.lead #{company.name}
			.row
				.col-md-6
					h3 Listings
					each job in company.jobPostings
						.thumbnail
							.row
								.col-md-12
									h6.pull-right #{job.location} - #{job.seasons}
									h5 #{job.listing}
							.row
								.col-md-12
									a(href=router.getLink("deleteJob", {jobId: job._id})).btn.btn-danger.pull-right Delete
									a(href=router.getLink("jobListing", {jobId: job._id})).btn.btn-primary.pull-right View Listing
									p Posted: #{moment(job.dateCreated).format("MM/DD/YYYY")}

				.profileSection
					h3 Recent Applicants



				
	include ../_footer
a#courseLink(href=router.getLink("course", {
	courseid: course._id,
	courseTtle: course.title, 
}))
	.listedClass.thumbnail
		.row
			.col-md-6.col-sm-6
				img#profilePhoto.pull-left(src="/img/mick.png")
				.classtitle
					h3 #{course.title}
					em.subheader with <a href="http://en.wikipedia.org/wiki/Kelly_Slater">#{course.teacher}</a>
					p.dateMonth #{course.date}
			.col-xs-6.col-sm-6
				p.lead 20% complete
				.progress.progress-striped
					.progress-bar(role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%")
						span.sr-only 4/10 spots Taken
				button.btn.btn-primary(type="button") Meet your Classmates
				button.btn.btn-success(type="button") Book a Trip
				a.btn.btn-danger(href=router.getLink("removeFromMyList", {user: locals.user.username , courseid: course})) Delete
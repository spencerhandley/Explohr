extends ../layout

block content
	include ../_topbar
	.container
		.row
			div.courseDetails.col-sm-6.col-md-6
				h2.courseTitle #{job.listing}
				p.lead #{job.location}
				p Published: #{moment(job.dateCreated).format("MM/DD/YYYY")}


				h3 Job Overview
				p #{job.description}
				h3 Ideal Candidate
				p #{job.idealCandidate}
				

			.col-sm-6.col-md-6
				#registerBtns
					p.lead Apply for this Job <b>Today</b>!
					p #{job.applicationDetails}
					a(href=router.getLink("apply", {jobId: job._id})).btn.btn-success.btn-lg Apply Now
				.panel.panel-default#tripDetails
					.panel-heading Employer Information
					ul.list-group
						li.list-group-item <b>Seasons:</b>  #{job.seasons}
